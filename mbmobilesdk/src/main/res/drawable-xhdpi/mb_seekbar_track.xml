<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:id="@android:id/background"
        android:gravity="center_vertical|fill_horizontal">
        <shape android:shape="rectangle">
            <size android:height="@dimen/mb_unit_x2" />
            <corners android:radius="@dimen/mb_unit_x1" />
            <solid android:color="@color/mb_grey6" />
            <stroke
                android:width="0.5dp"
                android:color="@color/mb_grey2" />
        </shape>
    </item>
    <item
        android:id="@android:id/progress"
        android:gravity="center_vertical|fill_horizontal">
        <scale android:scaleWidth="100%">
            <shape android:shape="rectangle">
                <size android:height="@dimen/mb_unit_x2" />
                <corners android:radius="@dimen/mb_unit_x1" />
                <solid android:color="@color/mb_accent_primary" />
                <stroke
                    android:width="1dp"
                    android:color="@color/mb_grey2" />
            </shape>
        </scale>
    </item>
</layer-list>