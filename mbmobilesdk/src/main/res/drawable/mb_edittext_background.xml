    </item>

    <item>
        <shape>
            <stroke android:width="0.5dp" android:color="@color/mb_accent_primary" />
            <solid android:color="@color/mb_grey5" />
            <corners android:bottomLeftRadius="@dimen/mb_edittext_corner_radius" android:bottomRightRadius="@dimen/mb_edittext_corner_radius" android:topLeftRadius="@dimen/mb_edittext_corner_radius" android:topRightRadius="@dimen/mb_edittext_corner_radius" />
        </shape>
    </item>
</selector>
