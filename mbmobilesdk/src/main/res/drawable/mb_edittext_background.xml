<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" android:enterFadeDuration="@android:integer/config_shortAnimTime" android:exitFadeDuration="@android:integer/config_shortAnimTime">

    <item android:state_enabled="false">
        <shape>
            <stroke android:width="0.5dp" android:color="@color/mb_grey3" />
            <solid android:color="@color/mb_grey6" />
            <corners android:bottomLeftRadius="@dimen/mb_button_corner_radius" android:bottomRightRadius="@dimen/mb_button_corner_radius" android:topLeftRadius="@dimen/mb_button_corner_radius" android:topRightRadius="@dimen/mb_button_corner_radius" />
