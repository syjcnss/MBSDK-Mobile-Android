<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    android:enterFadeDuration="@android:integer/config_shortAnimTime"
    android:exitFadeDuration="@android:integer/config_shortAnimTime">

    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/mb_text_button_pressed" />
            <corners
                android:bottomLeftRadius="@dimen/mb_button_corner_radius"
                android:bottomRightRadius="@dimen/mb_button_corner_radius"
                android:topLeftRadius="@dimen/mb_button_corner_radius"
                android:topRightRadius="@dimen/mb_button_corner_radius" />
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape>
            <solid android:color="@android:color/transparent" />
            <corners
                android:bottomLeftRadius="@dimen/mb_button_corner_radius"
                android:bottomRightRadius="@dimen/mb_button_corner_radius"
                android:topLeftRadius="@dimen/mb_button_corner_radius"
                android:topRightRadius="@dimen/mb_button_corner_radius" />
        </shape>
    </item>

    <item>
        <shape>
            <solid android:color="@android:color/transparent" />
            <corners
                android:bottomLeftRadius="@dimen/mb_button_corner_radius"
                android:bottomRightRadius="@dimen/mb_button_corner_radius"
                android:topLeftRadius="@dimen/mb_button_corner_radius"
                android:topRightRadius="@dimen/mb_button_corner_radius" />
        </shape>
    </item>
</selector>
