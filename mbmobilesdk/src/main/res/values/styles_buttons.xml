<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MBBaseButtonStyle" parent="Widget.AppCompat.Button" />

    <style name="MBCommonButtonStyle" parent="MBBaseButtonStyle">
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textSize">@dimen/mb_font_size_button</item>
        <item name="android:fontFamily">@font/mb_font_sans_demi</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="MBPrimaryButtonStyle" parent="MBCommonButtonStyle">
        <item name="android:background">@drawable/mb_primary_button_background</item>
        <item name="android:textColor">@color/mb_white</item>
        <item name="android:elevation">@dimen/mb_primary_button_elevation</item>
    </style>

    <style name="MBSecondaryButtonStyle" parent="MBCommonButtonStyle">
        <item name="android:background">@drawable/mb_secondary_button_background</item>
        <item name="android:textColor">@color/mb_secondary_button_text_color</item>
        <item name="android:elevation">@dimen/mb_primary_button_elevation</item>
    </style>

    <style name="MBTextButtonStyle" parent="MBCommonButtonStyle">
        <item name="android:background">@drawable/mb_text_button_background</item>
    </style>

    <style name="MBPrimaryTextButtonStyle" parent="MBTextButtonStyle">
        <item name="android:textColor">@color/mb_primary_text_button_text_color</item>
    </style>

    <style name="MBSecondaryTextButtonStyle" parent="MBTextButtonStyle">
        <item name="android:textColor">@color/mb_secondary_text_button_text_color</item>
    </style>

    <style name="MBRadioButtonStyle" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textSize">@dimen/mb_font_size_body_1</item>
        <item name="android:fontFamily">@font/mb_font_sans</item>
        <item name="android:button">@drawable/mb_radio_button</item>
        <item name="android:paddingStart">@dimen/mb_unit_x3</item>
    </style>
</resources>